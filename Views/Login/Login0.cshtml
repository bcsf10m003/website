@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8">
<title>Slick Login</title>
        @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
<meta name="description" content="slick Login">
<meta name="author" content="Webdesigntuts+">
<link rel="stylesheet" type="text/css" href="~/content/style.css" />
<script type="text/javascript" src="http://code.jquery.com/jquery-latest.min.js"></script>
<script src="http://www.modernizr.com/downloads/modernizr-latest.js"></script>
<script type="text/javascript" src="~/script/placeholder.js"></script>
</head>
<body>
<form id="slick-login" action="/Login/LoginAdmin" method="post">
<h6>!  ! ! * * * *  A D M I N * * * * ! !  !</h6>
<label for="password">password</label><input type="password" name="Password" class="placeholder" placeholder="password"  data-val="true" data-val-required="This must be a Passward" >
     <span class="field-validation-valid" data-valmsg-for="Password" data-valmsg-replace="true"></span>
<input type="submit" value="Log In">
</form>
         
     @Scripts.Render("~/bundles/jqueryval")
</body>
</html>