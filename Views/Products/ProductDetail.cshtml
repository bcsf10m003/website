</script>

<script type="text/javascript">

ddsmoothmenu.init({
	mainmenuid: "templatemo_menu", //menu DIV id
	orientation: 'h', //Horizontal or vertical menu: Set to "h" or "v"
	classname: 'ddsmoothmenu', //class added to menu's outer DIV
	//customtheme: ["#1c5a80", "#18374a"],
	contentsource: "markup" //"markup" or ["container_id", "path_to_menu_file"]
})

function clearText(field)
{
    if (field.defaultValue == field.value) field.value = '';
    else if (field.value == '') field.value = field.defaultValue;
}
</script>

<link rel="stylesheet" href="~/content/lightbox.css" type="text/css" media="screen" />
	
<script src="~/scripts/prototype.js" type="text/javascript"></script>
<script src="~/scripts/scriptaculous.js?load=effects,builder" type="text/javascript"></script>
<script src="~/scripts/lightbox.js" type="text/javascript"></script>

</head>

<body id="subpage">

<div id="templatemo_wrapper">
     <div id="site_title"><h1>Products</h1></div> <br /> 
    <div id="templatemo_menu" class="ddsmoothmenu">
        <ul>
            <li><a href="~/Home/Index">Home</a></li>
            <li><a href="~/Products/Products" class="selected">Products</a></li>
            <li><a href="~/Home/About">About</a></li>
            <li><a href="~/Checkout/Checkout">Checkout</a></li>
            <li><a href="~/Home/Contact">Contact</a></li>
        </ul>
        <br style="clear: left" />
    </div> <!-- end of templatemo_menu -->
    
    <div class="cleaner h20"></div>
    <div id="templatemo_main_top"></div>
    <div id="templatemo_main">
    	
        
        <div id="content">
        	<h2>Product Details</h2> <!-- start changing from here !-->
            <div class="col col_13">
        	<a  rel="lightbox[portfolio]" href="@Model.ImagePath" title="@Model.Name"><img src="@Model.ImagePath" alt="Image 10" height="200px" width="200px" /></a>
            </div>
            <div class="col col_13 no_margin_right">
                <table>
                    <tr>
                        <td height="30" width="160">Price:</td>
                        <td>$@Model.Price</td>
                    </tr>
                    <tr>
                        <td height="30">Availability:</td>
                        <td>In Stock</td>
                    </tr>
                    <tr>
                        <td height="30">Model:</td>
                        <td>Product @Model.Id</td>
                    </tr>
                    <tr>
                        <td height="30">Manufacturer:</td>
                        <td>Apple</td>
                    </tr>
                </table>
                <div class="cleaner h20"></div>
                @{if(@ViewBag.name != null)
                {
                      <a href="~/Shoppingcart/AddToShoppingCart/@Model.Id" class="add_to_cart" onclick="alert('Item is added to Cart')">Add to Cart</a>
                }}
			</div>
            <div class="cleaner h30"></div>
            
            <h5><strong>Product Description</strong></h5>
            <p>@Model.Description</p>
            
            <div class="cleaner"></div>
        </div> <!-- END of content -->
        <div class="cleaner"></div>
    </div> <!-- END of main --> 
</div>
    </div>


<script type='text/javascript' src='~/scripts/logging.js'></script>
</body>
</html>